@model ThemeParkApplication.Models.Ticket

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-controller="ticket" asp-action="create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Bank" class="control-label"></label>
				<select asp-for="Bank" asp-items="Html.GetEnumSelectList<Bank>()" class="form-control"></select>
				<span asp-validation-for="Bank" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Type" class="control-label"></label>
				<select asp-for="Type" asp-items="Html.GetEnumSelectList<TicketType>()" class="form-control"></select>
				<span asp-validation-for="Type" class="text-danger"></span>
			</div>

			<div class="form-group">
				<input type="submit" value="Pay" class="btn btn-default" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-controller="home" asp-action="Index">Back to Main Page</a>
</div>

