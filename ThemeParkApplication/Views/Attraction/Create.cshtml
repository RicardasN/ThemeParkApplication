@model Attraction
@{
	ViewData["Title"] = "Create";
}
	<h2>Create Attraction</h2>
	<form asp-controller="attraction" asp-action="create" method="post">

		<div class="form-group row">
			<label asp-for="Name" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Name" class="form-control" placeholder="Name" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Location" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Location" class="form-control" placeholder="Location" />
				<span asp-validation-for="Location" class="text-danger"></span>
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Rating" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Rating" class="form-control" placeholder="5" />
				<span asp-validation-for="Rating" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="ImageSrc" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="ImageSrc" class="form-control" placeholder="Image address" />
				<span asp-validation-for="ImageSrc" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Description" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Description" class="form-control" placeholder="Short Description" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="checkbox">
				<label>
					<input asp-for="IsOpen" /> @Html.DisplayNameFor(model => model.IsOpen)
				</label>
			</div>
		</div>

		<div class="form-group row">
			<div class="col-sm-10">
				<button type="submit" class="btn btn-primary">Create</button>
			</div>
		</div>
	</form>

