@model IEnumerable<ThemeParkApplication.Models.Message>

@{
	ViewData["Title"] = "View";
}

<h2>My Messages</h2>
<a asp-controller="home" asp-action="index" class="btn btn-primary">Go Back</a>
<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Text)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SentTime)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Text)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SentTime)
				</td>
				<td>
					<a asp-action="Delete" asp-route-id="@item.MessageID">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
